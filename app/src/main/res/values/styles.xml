<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="member_info" parent="AppTheme">
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/detail_text_size</item>
    <item name="android:paddingTop">@dimen/padding_half</item>
    <item name="android:paddingBottom">@dimen/padding_half</item>
    <item name="paddingStart">@dimen/padding_double</item>
    <item name="paddingEnd">@dimen/padding_double</item>
    <item name="android:layout_marginStart">@dimen/padding_double</item>
  </style>

</resources>
